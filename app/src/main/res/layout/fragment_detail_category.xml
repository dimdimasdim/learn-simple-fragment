    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.learn.dimdimasdim.fragment.DetailCategoryFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_category_name"
